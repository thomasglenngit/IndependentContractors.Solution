@{
  Layout = "_Layout";
}

@using IndependentContracts.Models;
@model List<IndependentContracts.Models.Armory>;

<h1>Weapons</h1>

@if (@Model.Count == 0)
{
  <h3>No Weapons have been added yet!</h3>
} 

@foreach (Armory armory in Model)
{
  <li>@Html.ActionLink($"{armory.WeaponName}", "Details", new { id = armory.ArmoryId })</li>
}

<p>@Html.ActionLink("Add New Weapon", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>