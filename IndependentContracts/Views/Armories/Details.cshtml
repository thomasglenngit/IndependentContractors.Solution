@{
  Layout = "_Layout";
}

@using IndependentContracts.Models;
@model IndependentContracts.Models.Armory;

<h2>Weapon Details</h2>
<hr />
<h3>@Model.WeaponName</h3>
<hr />
<ul>
@if (@Model.Contractors.Count == 0)
{
  <p>This weapon type is not in use by any contractors.</p>
}
else
{
  <h4>Contractors</h4>
  @foreach(var join in Model.Contractors)
  {
    <li>@Html.ActionLink($"{@join.Contractor.Alias}, {@join.Contractor.RegionOfOperation}", "Details", "Contractors", new {id = join.ContractorId})</li>
  }
  <hr />
  @* <h4>Specialties</h4>
  @foreach(var join in Model.Specialties)
  {
    <li>@Html.ActionLink(@join.Specialty.SpecialtyName, "Details", "Specialties", new {id = join.SpecialtyId})</li>
  } *@
}
<hr />
<p>@Html.ActionLink("Back to Armory", "Index")</p>
<p>@Html.ActionLink("Edit Armory", "Edit", new { id = Model.ArmoryId })</p>
<p>@Html.ActionLink("Delete Armory", "Delete", new { id = Model.ArmoryId })</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
