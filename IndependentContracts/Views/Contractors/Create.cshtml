@{
  Layout = "_Layout";
}

@model IndependentContracts.Models.Contractor

<h1>Add a New Contractor</h1>
<hr/>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Alias)
    @Html.TextBoxFor(model => model.Alias, new { @class = "form-control", @required = true})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.RegionOfOperation)
    @Html.TextBoxFor(model => model.RegionOfOperation, new { @class = "form-control", @required = true})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.WeaponOfChoice)
    @Html.TextBoxFor(model => model.WeaponOfChoice, new { @class = "form-control", @require = true})
  </div>
  <div class="form-group">
    @Html.Label("Select Client")
    @Html.DropDownList("ClientId", null,  new { @class="form-control"})
  </div>
  <input type="submit" value="Add New Contractor" class="btn btn-success" />
}
<hr />
<p>@Html.ActionLink("Home", "Index", "Home")</p>