@{
  Layout = "_Layout";
}

@using IndependentContracts.Models;
@model List<IndependentContracts.Models.Organization>;

<h1>Organizations</h1>

@if (@Model.Count == 0)
{
  <h3>No Organizations have been added yet!</h3>
} 

@foreach (Organization organization in Model)
{
  <li>@Html.ActionLink($"{organization.Name}", "Details", new { id = organization.OrganizationId })</li>
}

<p>@Html.ActionLink("Add New Organization", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>