@{
  Layout = "_Layout";
}

@using IndependentContracts.Models;
@model List<IndependentContracts.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId})</li>
}

<p>@Html.ActionLink("Add New Client", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>